{
  "name": "slack-api",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@slack/web-api": "^5.9.0",
    "cross-env": "7.0.2",
    "dotenv": "^8.2.0",
    "serverless-wrappers": "1.0.0"
  },
  "devDependencies": {
    "@slack-wrench/jest-mock-web-client": "^1.2.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "serve": "^11.3.1",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest",
    "test:watch": "jest --coverage --watchAll",
    "test:unit": "jest slackService.spec.ts --coverage",
    "test:integration": "jest slackIntegration.spec.ts --coverage",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "build:watch": "onchange 'src/*.ts' -- yarn build",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage dist"
  }
}